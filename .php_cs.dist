<?php

$finder = PhpCsFixer\Finder::create()
    ->exclude([
        'CmsBundle/Resources/public/components',
        'CmsBundle/Resources/xms/node_modules',
        'CmsBundle/node_modules'
    ])
    ->in(__DIR__ . '/src')
    ->name('*.php')
;

return PhpCsFixer\Config::create()
    ->setRiskyAllowed(true)
    ->setRules([
        '@Symfony' => true,
    ])
    ->setFinder($finder)
;
